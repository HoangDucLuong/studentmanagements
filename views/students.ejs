<!-- views/students.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #3498db;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #3498db;
            color: white;
        }

        .actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .update-btn,
        .delete-btn {
            background-color: #3498db;
            color: #fff;
            padding: 8px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .update-btn:hover,
        .delete-btn:hover {
            background-color: #2c3e50;
        }

        form {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            margin-top: 20px;
        }

        label {
            flex: 1;
            margin-bottom: 8px;
            color: #333;
        }

        input {
            flex: 1;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            background-color: #3498db;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
        }

        button:hover {
            background-color: #2c3e50;
        }
        
    </style>
    <title>Student List</title>
</head>

<body>
    <container>
        <h1>Student List</h1>
        <form action="/logout">
            <button>Logout</button>
        </form>
        <table>
            <!-- Table headers... -->
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Address</th>
                    <th>Age</th>
                    <th>Grade</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student=> { %>
                    <tr>
                        <!-- Student details... -->
                        <td>
                            <%= student.id %>
                        </td>
                        <td>
                            <%= student.name %>
                        </td>
                        <td>
                            <%= student.phoneNumber %>
                        </td>
                        <td>
                            <%= student.address %>
                        </td>
                        <td>
                            <%= student.age %>
                        </td>
                        <td>
                            <%= student.grade %>
                        </td>
                        <td class="actions">
                            <!-- Update button -->
                            <a class="update-btn" href="/updateStudent/<%= student._id %>">Update</a>

                            <!-- Delete button -->
                            <a class="delete-btn" href="/deleteStudent/<%= student._id %>">Delete</a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>

        <!-- Form for adding a new student... -->
        <h1>Add New Student</h1>
        <form action="/addStudent" method="post">
            <label for="id">ID:</label>
            <input type="text" name="id" required>

            <label for="name">Name:</label>
            <input type="text" name="name" required>

            <label for="address">Address:</label>
            <input type="text" name="address" required>

            <label for="phoneNumber">Phone Number:</label>
            <input type="text" name="phoneNumber" required>

            <label for="age">Age:</label>
            <input type="number" name="age" required>

            <label for="grade">Grade:</label>
            <input type="text" name="grade" required>

            <button type="submit">Add Student</button>
        </form>
    </container>
</body>

</html>